<p id="notice"><%= notice %></p>

<h1>Admin News</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_news.each do |admin_news| %>
      <tr>
        <td><%= admin_news.name %></td>
        <td><%= admin_news.description %></td>
        <td><%= image_tag admin_news.image.url(:thumb) %></td>
        <td><%= link_to 'Show', admin_news %></td>
        <td><%= link_to 'Edit', edit_admin_news_path(admin_news) %></td>
        <td><%= link_to 'Destroy', admin_news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin News', new_admin_news_path %>
