<p id="notice"><%= notice %></p>

<h1>Departments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Short form</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.short_form %></td>
        <td><%= link_to 'Show', admin_department_path(department)%></td>
        <td><%= link_to 'Edit', edit_admin__department_path(department) %></td>
        <td><%= link_to 'Destroy', admin_department_path(department), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

